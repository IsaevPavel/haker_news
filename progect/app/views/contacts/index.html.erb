<h2>Contacts</h2>

<h2>A user-contributed phone (and email) book.</h2>

<table>
  <tr>
    <td>Name</td>
    <td>Phone</td>
    <td>Email</td>
  </tr>
  <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%=link_to 'Edit contact', edit_contact_path(contact)%></td>
        <td><%= link_to 'Delete', contact, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
<%=link_to 'Add contact', new_contact_path%>

