<style>
    .field_with_errors{
        background: red;
    }
</style>

<% @link.errors.full_messages.each do |t|  %>
    <%= t %>
<% end %>



<h2>Enter new contact</h2>
<%=form_for @link do |f|%>
    <%=f.label :name%>
    <%=f.text_field :name%>
    <%=f.label :description%>
    <%=f.text_field :description%>

    <%=f.submit %>
<%end%>

<%=link_to 'Home page', '/links'%>